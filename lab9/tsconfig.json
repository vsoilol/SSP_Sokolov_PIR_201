{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "strict": true,
    "baseUrl": ".",
    "paths": {
      "@hooks/*": ["src/hooks/*"],
      "@fonts/*": ["./src/assets/fonts/*"],
      "@core/*": ["./src/core/*"],
      "@src/*": ["./src/*"],
      "@assets/*": ["./src/assets/*"],
      "@components/*": ["./src/components/*"],
      "@data/*": ["./src/data/*"],
      "@my-types/*": ["./src/types/*"],
      "@screens/*": ["src/screens/*"]
    }
  }
}
